@{
    Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h1>Word Repeat Counter</h1>
</div>
<p>Count how frequently a word is repeated in a sentence!</p>
<div class = "form">
<form action="/result" method="post">
    <div class="form-group col-md-4">
        @* Form space to enter a sentence *@
        <label for="inputSentence">Sentence:</label>
        <input name="inputSentence" class="form-control">
    </div>
    <div class="form-group col-sm-2">
        @* //Form space to enter a word to be found// *@
        <label for="inputWord">Word to find:</label>
        <input name="inputWord" class="form-control">
    </div>
    <br>
    <button type="submit" class="btn btn-md btn-success">Count!</button>
</form>
</div>
